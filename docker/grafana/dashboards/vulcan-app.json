{
  "uid": "vulcan-app",
  "title": "Vulcan App",
  "tags": ["vulcan", "app"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Uptime (Prometheus up)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "up{job=\"vulcan-api\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests / sec",
      "gridPos": { "x": 6, "y": 0, "w": 9, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Errors / sec (5xx)",
      "gridPos": { "x": 15, "y": 0, "w": 9, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 latency (seconds) - requires http_request_duration_seconds_bucket",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ]
    }
  ]
}